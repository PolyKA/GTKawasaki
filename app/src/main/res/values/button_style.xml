<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="basic_button">
        <item name="cornerRadius">15dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="paddingStart">10dp</item>
        <item name="paddingEnd">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="clickable_button">
        <item name="android:background"> @drawable/clickable_button </item>
        <item name="android:padding"> 5dp </item>
        <item name="android:scaleType"> centerCrop </item>
    </style>

    <style name="bottom_panel_button" parent="clickable_button">
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>
</resources>